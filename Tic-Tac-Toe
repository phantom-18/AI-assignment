<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Tic-Tac-Toe AI (Minimax)</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }

        .board {
            display: grid;
            grid-template-columns: repeat(3, 100px);
            gap: 5px;
            justify-content: center;
            margin-top: 20px;
        }

        .cell {
            width: 100px;
            height: 100px;
            font-size: 36px;
            cursor: pointer;
        }

        #status {
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
        }

        button {
            margin-top: 15px;
            padding: 8px 15px;
            font-size: 16px;
        }
    </style>
</head>

<body>

<h1>Tic-Tac-Toe: Human vs AI (Minimax)</h1>

<!-- Game Board -->
<div class="board" id="board"></div>

<p id="status">Your turn (X)</p>

<button onclick="resetGame()">Restart Game</button>

<script>
/*
============================================
1. REPRESENTATION OF GAME STATES
--------------------------------------------
The board is represented as an array of 9 cells.
Each cell can have:
- 'X' (Human)
- 'O' (AI)
- ''  (Empty)
============================================
*/

let board = ['', '', '', '', '', '', '', '', ''];
const human = 'X';
const ai = 'O';
let gameOver = false;

/*
============================================
WINNING COMBINATIONS
============================================
*/
const winPatterns = [
    [0,1,2], [3,4,5], [6,7,8], // Rows
    [0,3,6], [1,4,7], [2,5,8], // Columns
    [0,4,8], [2,4,6]           // Diagonals
];

/*
============================================
INITIALIZE BOARD UI
============================================
*/
const boardDiv = document.getElementById("board");

function createBoard() {
    boardDiv.innerHTML = "";
    board.forEach((cell, index) => {
        const button = document.createElement("button");
        button.className = "cell";
        button.innerText = cell;
        button.onclick = () => humanMove(index);
        boardDiv.appendChild(button);
    });
}

createBoard();

/*
============================================
2. TERMINAL STATES
--------------------------------------------
- Win: One player completes a pattern
- Draw: Board full & no winner
============================================
*/

function checkWinner(state, player) {
    return winPatterns.some(pattern =>
        pattern.every(index => state[index] === player)
    );
}

function isDraw(state) {
    return state.every(cell => cell !== '');
}

/*
============================================
3. MINIMAX ALGORITHM (CORE AI LOGIC)
--------------------------------------------
- AI maximizes score
- Human minimizes score
- AI explores all possible future moves
============================================
*/

function minimax(state, depth, isMaximizing) {

    if (checkWinner(state, ai)) return 10 - depth;
    if (checkWinner(state, human)) return depth - 10;
    if (isDraw(state)) return 0;

    if (isMaximizing) {
        let bestScore = -Infinity;

        for (let i = 0; i < 9; i++) {
            if (state[i] === '') {
                state[i] = ai;
                let score = minimax(state, depth + 1, false);
                state[i] = '';
                bestScore = Math.max(score, bestScore);
            }
        }
        return bestScore;

    } else {
        let bestScore = Infinity;

        for (let i = 0; i < 9; i++) {
            if (state[i] === '') {
                state[i] = human;
                let score = minimax(state, depth + 1, true);
                state[i] = '';
                bestScore = Math.min(score, bestScore);
            }
        }
        return bestScore;
    }
}

/*
============================================
4. AI MOVE (ALWAYS OPTIMAL)
============================================
*/

function aiMove() {
    let bestScore = -Infinity;
    let move;

    for (let i = 0; i < 9; i++) {
        if (board[i] === '') {
            board[i] = ai;
            let score = minimax(board, 0, false);
            board[i] = '';
            if (score > bestScore) {
                bestScore = score;
                move = i;
            }
        }
    }

    board[move] = ai;
    createBoard();
    checkGameStatus();
}

/*
============================================
5. HUMAN vs AI SIMULATION
============================================
*/

function humanMove(index) {
    if (board[index] !== '' || gameOver) return;

    board[index] = human;
    createBoard();
    checkGameStatus();

    if (!gameOver) {
        document.getElementById("status").innerText = "AI thinking...";
        setTimeout(aiMove, 500);
    }
}

/*
============================================
GAME STATUS CHECK
============================================
*/

function checkGameStatus() {
    if (checkWinner(board, human)) {
        document.getElementById("status").innerText = "You Win! üéâ";
        gameOver = true;
        return;
    }

    if (checkWinner(board, ai)) {
        document.getElementById("status").innerText = "AI Wins ü§ñ";
        gameOver = true;
        return;
    }

    if (isDraw(board)) {
        document.getElementById("status").innerText = "Draw ü§ù";
        gameOver = true;
        return;
    }

    document.getElementById("status").innerText = "Your turn (X)";
}

/*
============================================
RESET GAME
============================================
*/

function resetGame() {
    board = ['', '', '', '', '', '', '', '', ''];
    gameOver = false;
    document.getElementById("status").innerText = "Your turn (X)";
    createBoard();
}
</script>

</body>
</html>
